{
  "name": "electron-tray",
  "version": "1.0.0",
  "description": "Electron app with system tray",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && cp src/index.html dist/index.html && if [ -d assets ]; then mkdir -p dist/assets && cp assets/* dist/assets/; fi",
    "start": "npm run build && ELECTRON_DISABLE_SANDBOX=1 electron .",
    "dev": "ELECTRON_DISABLE_SANDBOX=1 tsc --watch & ELECTRON_DISABLE_SANDBOX=1 electron ."
  },
  "keywords": ["electron", "tray", "typescript"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "typescript": "^5.3.3"
  }
}

